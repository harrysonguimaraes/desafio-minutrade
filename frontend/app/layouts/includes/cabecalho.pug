//- Para adicionar um novo item no menu, adicione uma nova entrada no arquivo utils/itensMenu.js 
//- e em cada controller, adicione a chave menu. Ex na controller Inicial: Inicial.menu = app.utils.itensMenu.INICIO; 
header(data-spy="affix" data-offset-top="70", ng-controller="cabecalho as cabecalho")
	.container

		div.row
			div.col-sm-8.col-md-6
				h1.hidden-xs.hidden-affixed LIVRARIA MINUTRADE

				ul
					li(ng-class="{active: menu === itensMenu.INICIO}")
						a(href="#/") INÍCIO

					li(ng-class="{active: menu === itensMenu.LIVROS}")
						a(href="#/livros") LIVROS
						
					li(ng-class="{active: menu === itensMenu.CARRINHO}")
						a(href="#/carrinho") CARRINHO
						
			div.col-sm-4.col-md-6#info-user-logado.hidden-affixed
				
				div.text-right.hidden-xs
					span#nome-user-logado Olá, {{usuarioLogado ? usuarioLogado.name : 'Visitante'}}
					br
					span#info-user-logado.font-thin 
						a(ng-show="!usuarioLogado", ng-click="cabecalho.login()") Logar com Facebook
						a(ng-show="usuarioLogado", ng-click="cabecalho.logout()") Logout
							span.fa.fa-sign-out
